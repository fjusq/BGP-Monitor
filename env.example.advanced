#This .env file has some features to it that is still under development. Some of this will work, but are not tested extensively.
#Use .env.example for a more basic configuration that is tested and known to work.

# Project
PROJECT_NAME=bgpm

# BIRD core
LOCAL_AS=65000
ROUTER_ID=192.0.2.10
PEER_COUNT=2

# Peer 1
PEER_1_NAME=rr01
PEER_1_ADDR=198.51.100.1
PEER_1_ASN=64512
PEER_1_ROLE=active         # active|passive
# PEER_1_MD5=changeme       # optional
# PEER_1_MULTIHOP=0         # 0 or >0
# PEER_1_SOURCE=            # optional local source address
# PEER_1_HOLDTIME=90        # seconds (optional)

# Peer 2
PEER_2_NAME=edge01
PEER_2_ADDR=2001:db8::1
PEER_2_ASN=64513
PEER_2_ROLE=passive
# PEER_2_MD5=
# PEER_2_MULTIHOP=0
# PEER_2_SOURCE=
# PEER_2_HOLDTIME=90

# Syslog (choose one of these patterns)
# 1) External syslog (default)
SYSLOG_ADDRESS=udp://127.0.0.1:514

# 2) Local syslog profile (enable service and point here)
#SYSLOG_ADDRESS=tcp://127.0.0.1:8514

SYSLOG_TAG=bgpm
SYSLOG_FORMAT=rfc5424

# Optional BIRD tuning
BIRD_LOG_LEVEL=info       # debug|info|warning|error
BIRD_GR_TIMER=240         # graceful restart timer (seconds)
BIRD_SCAN_TIME=15         # routing table scan period (seconds)

# Feature flags for future modules (placeholders for now)
ENABLE_SNMP=false
ENABLE_MRT=false
ENABLE_BMP=false
ENABLE_METRICS=false